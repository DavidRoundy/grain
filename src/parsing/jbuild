(jbuild_version 1)

(ocamllex (lexer))

(library
 ((name     grain_parsing)
  (synopsis "Frontend modules for Grain compiler")
  (libraries (dyp batteries ppx_deriving ppx_sexp_conv sexplib extlib grain_utils))))

(rule
 ((targets (parser.ml))
  (deps (parser.dyp))
  (action (run dypgen --no-mli --Werror ${<}))))

