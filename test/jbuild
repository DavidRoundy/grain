(jbuild_version 1)

(executable
 ((name test)
  (libraries (grain oUnit extlib))))

(alias
 ((name   runtest)
  (deps   (test.exe
           (files_recursively_in input)
           (files_recursively_in lib))) ; FIXME: the standard library should be installed correctly out of the box.
  (action (run ${<}))))
