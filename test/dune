(executable
 (name test)
 (libraries grain oUnit extlib))

(rule
 (targets stdlib-dir.txt)
 (action
  (write-file %{targets} %{project_root}/stdlib)))

(alias
 (name runtest)
 (deps
  (:< test.exe)
  stdlib-dir.txt
  (source_tree input)
  (source_tree stdlib)
  (source_tree test-libs)
  (source_tree test-data))
 (action
  (run %{<})))
